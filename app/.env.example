# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# OpenRouter API
OPENROUTER_API_KEY="sk-or-v1-..."
OPENROUTER_HTTP_REFERER="https://github.com/aajaces/cadre"

# Magisterium API
MAGISTERIUM_API_KEY="sk_..."

# Data file paths (optional, for production deployment)
# These override the default relative paths for production environments like Vercel
# where process.cwd() may not match the development directory structure
QUESTIONS_PATH="../data/questions-alpha.yaml"
SCORES_SUMMARY_PATH="../data/scores-alpha.yaml"
COSTS_PATH="../data/costs.yaml"
RESULTS_DIR="../data/results"
LEGACY_EVALUATIONS_PATH="../data/evaluations-alpha.yaml"

# Environment
NODE_ENV="development"
